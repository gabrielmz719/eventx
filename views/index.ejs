<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Eventx</title>
  <!-- Adicionando Bootstrap CSS -->
  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
  <link rel="stylesheet" href="./stylesheets/style.css">
 <style>
   h1{
     text-align:center;
   }
   .title-margin {
    margin-top: 50px; 
    margin-bottom: 40px; 
  }
 </style>
</head>
<body>

  <%- include('navbar.ejs') %>
<main>
  <div style="margin-top: 20px;"></div>
  <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel" style="max-width: 800px; margin: 0 auto;"> <!-- Definindo largura máxima e centralizando -->
    <ol class="carousel-indicators">
      <% events.forEach((event, index) => { %>
        <li data-target="#carouselExampleIndicators" data-slide-to="<%= index %>" <% if (index === 0) { %>class="active"<% } %>></li>
      <% }); %>
    </ol>
    <div class="carousel-inner">
      <% events.forEach((event, index) => { %>
        <div class="carousel-item <% if (index === 0) { %>active<% } %>">
          <img src="/uploads/<%= event.coverImage %>" class="d-block w-100" alt="...">
        </div>
      <% }); %>
    </div>
    <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
      <span class="carousel-control-prev-icon" aria-hidden="true"></span>
      <span class="sr-only">Anterior</span>
    </a>
    <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
      <span class="carousel-control-next-icon" aria-hidden="true"></span>
      <span class="sr-only">Próximo</span>
    </a>
</div>
 
<h1 class="title-margin">Nossos Eventos</h1>
<div class="container">
  <% for (let i = 0; i < events.length; i += 4) { %>
    <div class="row">
      <% for (let j = i; j < i + 4 && j < events.length; j++) { %>
        <div class="col-lg-3 col-md-6 mb-4">
          <div class="card h-100 shadow-sm">
            <!-- Imagem de Capa do Evento -->
            <img src="uploads/<%= events[j].coverImage %>" class="card-img-top" alt="Imagem de Capa do Evento" style="height: 200px; object-fit: cover;">
            <div class="card-body d-flex flex-column">
              <!-- Título do Evento -->
              <h5 class="card-title"><%= events[j].title %></h5>
              <!-- Tipo do Evento -->
              <p class="card-text"><strong>Tipo:</strong> <%= events[j].type %></p>
              
              <!-- Data do Evento -->
              <p class="card-text"><strong>Data:</strong> <%= events[j].date.toDateString() %></p>
              <!-- Botão para mais detalhes -->
              <div class="mt-auto">
                <a href="/events/<%= events[j]._id %>" class="btn btn-primary">Detalhes</a>
              </div>
            </div>
          </div>
        </div>
      <% } %>
    </div>
  <% } %>
</div>
  
</main>
<footer class="footer" style="background-color: #042f5b;">
  <div class="container">
    <div class="row">
      <div class="col text-center text-light">
        <p>&copy; 2024 Seu Site. Todos os direitos reservados.</p>
      </div>
    </div>
  </div>
</footer>

<%- include('vlibras.ejs') %>


<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.16.0/umd/popper.min.js"></script>
<script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>


</body>
</html>
